# Financial Document Analyzer - Environment Variables
# Copy this file to .env and fill in your values

# ============== LLM Provider Selection ==============
# Choose your LLM provider: gemini, groq, ollama
LLM_PROVIDER=groq

# Vision provider for chart analysis: gemini (required for chart interpretation)
VISION_PROVIDER=gemini

# ============== Google Gemini Configuration ==============
# Get API key at: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-pro

# ============== Groq Configuration ==============
# Get free API key at: https://console.groq.com
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=llama-3.3-70b-versatile

# ============== Ollama (Local) Configuration ==============
# Install Ollama: https://ollama.ai
# Run: ollama pull llama3.2
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# ============== Application Settings ==============
APP_NAME=Financial Document Analyzer
APP_VERSION=1.0.0
DEBUG=true

# ============== API Settings ==============
API_HOST=0.0.0.0
API_PORT=8000

# ============== OCR Settings ==============
# Path to Tesseract executable (leave empty for auto-detection)
# Windows example: C:\Program Files\Tesseract-OCR\tesseract.exe
TESSERACT_CMD=
OCR_LANGUAGE=eng
OCR_DPI=300

# ============== LLM Settings ==============
LLM_TEMPERATURE=0.3
LLM_MAX_TOKENS=4096

# ============== Processing Settings ==============
MAX_FILE_SIZE_MB=50
MAX_PAGES=50
TABLE_DETECTION_CONFIDENCE=0.7
CHART_DETECTION_CONFIDENCE=0.6
