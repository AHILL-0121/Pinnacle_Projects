# ============================================================
# Conversational AI Competitor Intelligence System
# Environment Configuration
# ============================================================

# --- LLM Provider ---
# Options: "ollama", "openai"
LLM_PROVIDER=ollama

# Ollama Settings (default: local)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1

# OpenAI Settings (if using openai provider)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4o-mini

# --- Search Defaults ---
DEFAULT_LOCATION=Your City, Country
DEFAULT_RADIUS_KM=2
DEFAULT_BUSINESS_TYPE=clothing_store

# --- Application ---
DEMO_MODE=false
LOG_LEVEL=INFO
CACHE_TTL_SECONDS=3600
